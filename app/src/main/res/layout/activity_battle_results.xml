<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BattleResultsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:weightSum="5">


        <TextView
            android:id="@+id/resultTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:text="Потрачено"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/motivationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:text="В следующий раз повезет"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/resultNumTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:layout_weight="3"
            android:text="3/5"
            android:textSize="68sp" />

        <TextView
            android:id="@+id/someTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:text="правильных ответов"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/questionsTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="180dp"
            android:text="Вопросы те самые:"
            android:textSize="28sp" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="40dp"
            style="@style/ResultCardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text="В каком году родился Джобс"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_circle_green_24dp"
                    android:drawablePadding="5dp"
                    android:text="1955"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="1954"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="1956"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            style="@style/ResultCardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text="Имя CEO Apple"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_circle_green_24dp"
                    android:drawablePadding="5dp"
                    android:text="Тим Кук"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="Тим Эпл"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="Тим Мы летим"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            style="@style/ResultCardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text="Лучшая ОС"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="Windows"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="OS X"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_circle_green_24dp"
                    android:drawablePadding="5dp"
                    android:text="Линух"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"
            style="@style/ResultCardViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text="Кто захватит мир"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_weight="2"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="Xiaomi"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_circle_green_24dp"
                    android:drawablePadding="5dp"
                    android:text="Алиса"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_red_24dp"
                    android:drawablePadding="5dp"
                    android:text="Apple"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>