<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".BattlesActivity"
    android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_yes"
            android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="8dp"
            android:onClick="jumpToEnemies"
            android:paddingStart="14dp"
            android:paddingEnd="8dp"
            android:text="Новый батл начать"
            android:textSize="12sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile"
            android:onClick="jumpToProfile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текущие бои"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal">
        </TextView>
        <ListView
            android:id="@+id/battlesLV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        </ListView>
        <LinearLayout
            android:id="@+id/no_games_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
        </LinearLayout>
</LinearLayout>